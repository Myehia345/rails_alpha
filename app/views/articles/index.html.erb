<h1>Listing all articles</h1>

<p><%= link_to 'new', new_article_path %> </p>

<table>
    <tr>
        <th>Tittle</th>
        <th>Description</th>
    </tr>
    <% @articles.each do |art| %>
    <tr>
        <td><%= art.title %></td>
        <td><%= art.descripton %></td>
        <td>
            <%= link_to 'Edit' , edit_article_path(art) %>
        </td>
        
        <td>
            <%= link_to 'Show' , article_path(art) %>
        </td>
        <td>
            <%= link_to 'Delete', article_path(art), method: :delete, data: {confirm: "Are you sure?"} %>
        </td>
    </tr>
    <% end %>
</table>