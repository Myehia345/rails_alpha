<h1 align = "center">ALl Alpha Bloger</h1>



<div align= "center">
    <%= will_paginate@user %>
    <% @user.each do |user| %>
        <ul class = "listing">
            <div class = "row">
                <div class = "col-md-4 col-md-offset-4">
                    <li><%= link_to gravatar_for(user) , user_path(user) %> </li>
                    <li class = "article-title">
                        <%= link_to user.username , user_path(user) %>
                    </li>
                    <li><small><%= pluralize(user.articles.count ,"article") if user.articles %> </small></li>
                    <% if loggedin? and current_user.admin? %>
                        <li><%= link_to "delete" ,user_path(user) , method: :delete,
                            data: {confirm: "Are you sure you want to delete this user?" } %></li>
                    <% end %>
                </div>
            </div>
        </ul>
    <% end %>
    <%= will_paginate@user %>
</div>
